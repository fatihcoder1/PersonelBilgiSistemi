@model PersonelBilgiSistemi.Models.Personel
@{
    ViewData["Title"] = "YeniPersonel";
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
}

<br />

<br />
<h4>Personel Ekle</h4>
<br />
<form class="form-group" method="post">
    <b>Personel Adı </b>

    @Html.TextBoxFor(x => x.Adi, new { @class = "form-control" })
    <br />
    <b>Personel Soyadı </b>

    @Html.TextBoxFor(x => x.Soyadi, new { @class = "form-control" })
    <br />
    <b>Personel Şehir </b>

    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
    <br />
    <b>Personel Şehir </b>
    @Html.DropDownListFor(x=>x.Birim.BirimId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Personel Ekle</button>
</form>

